DROP TABLE DBA_FIND.LOCK_TABLE_SQL CASCADE CONSTRAINTS;

CREATE TABLE DBA_FIND.LOCK_TABLE_SQL
(
  SQL_FULLTEXT  CLOB,
  SQL_DATE      DATE
)
LOB (SQL_FULLTEXT) STORE AS BASICFILE (
  TABLESPACE  USERS
  ENABLE      STORAGE IN ROW
  CHUNK       8192
  RETENTION
  NOCACHE
  LOGGING)
TABLESPACE USERS
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE;
